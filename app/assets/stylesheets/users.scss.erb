/*index*/

.search_field{
	width:400px;
	margin-left: 38%;
}

.user-index-box{
	background: none;
	border: 1px solid #95b3d0;
	margin-bottom: 15px;
	padding: 25px;
	position: relative;
}

.user-index-box:before{
	background-color: #fff;
	padding: 2px 10px;
	position: absolute;
	top: -10px;
	left: 30px;
	text-align: center;
}

.user-index-box:after{
	background: none;
	border: 1px solid #6495ed;
	content: '';
	position: absolute;
	top: 3px;
	left: 3px;
	width: 100%;
	height: 100%;
	z-index: -1;
}

.user-index-text {
	color: #777777;
	text-align: left;
}

.users-title-index{
    color: #FF8C00;/*文字色*/
    padding: 0.5em 0;/*上下の余白*/
    border-top: solid 3px #777777;/*上線*/
    border-bottom: solid 3px #777777;/*下線*/
    font-size: 30px;
    font-weight: bold;
}

.user-index-nickname {
	font-size: 19px;
}

.user-index-favorite-artist {
	font-size: 15px;
}

.user-index-prefecture {
	font-size: 15px;
}

.user-img {
	border-radius: 50%;
    width:  180px;
    height: 180px;
}

.user-index-border {
  border-bottom: solid 1px #dadada;
}

.follow-btn {
	position: relative;
	display: inline-block;
	padding: 0.25em 0.5em;
	text-decoration: none;
	color: #FFF;
	background: #fd9535;/*背景色*/
	border-bottom: solid 2px #d27d00;/*少し濃い目の色に*/
	border-radius: 4px;/*角の丸み*/
	box-shadow: inset 0 2px 0 rgba(255,255,255,0.2), 0 2px 2px rgba(0, 0, 0, 0.19);
	font-weight: bold;
}

.follow-btn:active {
	border-bottom: solid 2px #fd9535;
	box-shadow: 0 0 2px rgba(0, 0, 0, 0.30);
}

