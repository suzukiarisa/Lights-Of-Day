<div class="bg-color-gray">
  <div calss="row">
　  <%= form_for @memory do |f| %>
      <div class="post-frame">
	    <%= f.label '＜Click frame / ﾜｸ ｦ ｸﾘｯｸ＞' %>
	  </div>
        <div class="d-flex justify-content-center">
	      <!--id "file"で、fileとdivを紐付けクリック時に連動 -->
	      <div id="img_field" onClick="$('#file').click()" >

	        <!-- 画像があるときは画像を表示する -->
	        <% if @memory.memory_photos.first.blank? %>
	          <%= image_tag(@memory.memory_photos.first.image.url) %>
	        <% else %>
	          <i class="fas fa-image"></i>
	        <% end %>
		  </div>
		    <div class="post-content-box">
		        <!-- id "file"をつけ、「display:none;」で隠す -->
		        <%= f.fields_for :memory_photos do |mf| %>
		          <%= mf.file_field :image, class: "image", style: "display:none;", id: "file"%>
		        <% end %>
	          <%= f.hidden_field :user_id, :value => @user_id %>
			    <div class="post-new-date">
	　　　　　　　  <%= @memory.created_at %>
			    </div>

				<div class="post-new-place-label">
				  <%= f.label :spot, 'Location / ﾛｹｰｼｮﾝ' %>
				</div>
				<div class="post-new-place-box form-control-lg">
				  <%= f.text_field :spot, placeholder: "思い出の場所を入力してください", :size => "50*50" %>
				</div>
				<div class="post-new-title-label">
				  <%= f.label :title, 'Title / ﾀｲﾄﾙ' %>
				</div>
				<div class="post-new-title-box form-control-lg">
			      <%= f.text_field :title, placeholder: "タイトルを入力してください", :size => "50*50" %>
				</div>
				<div class="post-new-text-label">
			      <%= f.label :body, 'Content / ﾅｲﾖｳ' %>
			    </div>
			    <div class="post-new-text-box form-control-lg">
				  <%= f.text_area :body, placeholder: "本文を入力してください", :style=>"width:470px; height:100px;" %>
				</div>
				<div class="post-post-new">
			      <%= f.submit 'Post', class:'btn btn-warning btn-lg', :style=>"width:270px; height:50px;" %>
			    </div>
			</div>
		</div>
    <% end %>
    <br>
    <br>
    <div class="post-explanation-text">Example / ﾚｲ</div>
    <img class="post-explanation" src="/assets/memory.jpg">
  </div>
    <br>
    <br>
</div>