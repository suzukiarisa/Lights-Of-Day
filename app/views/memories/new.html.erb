
<div class="container">
	<div calss="row">
		<div class="col-xs-6 col-xs-offset-3">
			<table class="table table-striped table-bordered create-memory-table">
		  <%= form_for @memory do |f| %>
				<tbody>

					<tr>
				     <%= f.fields_for :images do |image| %>
                       <div class="dropzone-container.clearfix">
                       	 <div class="memory-box">
                           <div id="preview"></div>
                           <div class="dropzone-area">
                             <%= image.label :image, class: "dropzone-box", for: "upload-image" do %>
                               <div class="input_area">
                                   <%= image.file_field :image, multiple: true, name: 'memory_images[images][]', id: "upload-image", class: "upload-image", 'data-image': 0 %>
                                        <i class="far fa-caret-square-down"></i>
                               </div>
                             <% end %>
						   </div>
					     </div>
					   </div>
					 <% end %>
					</tr>

					<tr>
						<div class="">
							<tr><label class="memory-box">投稿日</label></tr>
							  <tr>
								<div class="form-group">
								  <div class="input-group date" id="date" date-target-input="nearest">
								    <%= f.text_field :post_date, class:"form-control datetimepicker-input", data: {toggle: "datetimepicker", target: ".datetimepicker-input"}, placeholder: "YYYY/MM/DD" %>
								  </div>
									<script type="text/javascript">
										$(function () {
							  			$(".datetimepicker-input").datetimepicker({
							  				format:'YYYY/MM/DD'
							  			});
										});
									</script>
							    </div>
							  </tr>
						</div>
					<tr>
						<%= f.hidden_field :user_id, :value => @user_id %>
					</tr>
					<tr>
						<div class="">
							<td class="memory-box"><%= f.label :spot, '場所' %></td>
							<td class="memory-spot-box-content"><%= f.text_field :spot,class:"col-xs-6" %></td>
						</div>
					</tr>
					<tr>
						<div class="">
							<td class="memory-box"><%= f.label :title, 'タイトル ' %></td>
							<td class="memory-title-box-content"><%= f.text_field :title,class:"col-xs-6" %></td>
						</div>
					</tr>
					<tr>
						<div class="">
							<td rowspan="2" class="memory-box"><%= f.label :body, '内容 ' %></td>
							<td class="memory-table-height"><%= f.text_area :body,class:"col-xs-8 memory-height" %></td>
						</div>
					</tr>
				</tbody>
			</table>
			<%= f.submit '投稿', class:'btn btn-warning col-xs-4 col-xs-offset-4' %>
		  <% end %>
		</div>
	</div>
  </div>