<div class="container">
  <div class="row">
	<div class="memory-index">
      <span class="memories-title">Memories</span>
	</div>
	<div class="memory-new-link">
	  <%= link_to new_memory_path,data: {"turbolinks" => false} do %>
	    <span class="memory-font"> メモリーを投稿する <i class="far fa-arrow-alt-circle-left"></i></span>
	  <% end %>
	</div>
	  <div class="row">
	  	<% @memories.each do |memory| %>
		  <div class="col-xs-3">
		    <% if memory.present? %>
	          <% if memory.memory_photos.length == 0 %>
	            <%= image_tag "/no_image.jpg", class: "memory-img" %>
	          <% else %>
	            <% memory.memory_photos.each do |photo| %>
	              <%= image_tag photo.image.url, class: "memory-img" %>
	            <% end %>
	          <% end %>
	            <div class="memory-index-name">
			      <%= memory.user.nickname %>
			    </div>
				<div class="memory-index-created">
			      <%= l(memory.created_at, format: :short) %>
				</div>
				<div class="memory-index-spot">
			      <%= memory.spot %>
			    </div>
			    <div class="memory-index-title">
			      <%= memory.title %>
			    </div>
			    <div class="memory-index-body">
			      <%= memory.body %>
			    </div>
	        <% end %>
	      </div>
	      <% end %>
	  </div>
  </div>
</div>

<%= link_to "Back to top", root_path, class: 'btn btn-primary w-25' %>