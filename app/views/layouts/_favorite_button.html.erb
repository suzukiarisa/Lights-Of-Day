<% if festival.favorited_by?(current_user) %>
  <%= link_to festival_favorite_path(festival), method: :delete, remote: true do %>
    <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
  <% end %>
<% else %>
  <%= link_to festival_favorite_path(festival), method: :post, remote: true do %>
    <i class="far fa-heart" aria-hidden="true"></i>
  <% end %>
<% end %>