<div class="container">
  <div calss="row">
　  <%= form_for @recommend do |f| %>

		<div class="field image">
		  <%= form_with(model: @recommend, local: true) do |form| %>
		    <%= form.label '＜下枠をクリックして写真を選択＞' %>

		       <!--id "file"で、fileとdivを紐付けクリック時に連動 -->
		       <div id="img_field" onClick="$('#file').click()" >

		        <!-- 画像があるときは画像を表示する -->
		        <% if @recommend.recommend_photos.first.image.url.present? %>
		          <%= image_tag(@recommend.recommend_photos.first.image.url) %>
		        <% else %>
		          <i class="fas fa-image"></i><i class="fas fa-file-upload add"></i>
		        <% end %>

		       </div>
	              <!-- id "file"をつけ、「display:none;」で隠す -->
		          <%= form.file_field :image, class: "image", style: "display:none;", id: "file"%>
		  <% end %>
		</div>
          <%= f.hidden_field :user_id, :value => @user_id %>
		    <div class="recommend-date">
　　　　　　　  <%= @recommend.created_at %>
		    </div>

			<div class="recommend-place-label">
			  <%= f.label :spot, 'Place' %>
			</div>
			<div class="recommend-place-box">
			  <%= f.text_field :spot %>
			</div>
			<div class="recommend-title-label">
			  <%= f.label :title, 'Title' %>
			</div>
			<div class="recommend-title-box">
		      <%= f.text_field :title %>
			</div>
			<div class="recommend-text-label">
		      <%= f.label :body, 'Text' %>
		    </div>
		    <div class="recommend-text-box">
			  <%= f.text_area :body %>
			</div>
			<div class="recommend-post">
		      <%= f.submit '投稿', class:'btn btn-warning' %>
		    </div>
    <% end %>
  </div>
</div>