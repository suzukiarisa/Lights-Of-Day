<div class="bg-edit-color-gray h-100">
	<div class="post-edit-caption">Recommend Edit</div>
	  <div class="row">
	  	<div class="bg-edit-box-white">
			<div class="post-edit-img">
				<% if @recommend.present? %>
			      <% if @recommend.recommend_photos.length == 0 %>
			        <%= image_tag "/no_image.jpg", :size => '600x350' %>
			    <% else %>
			      <% @recommend.recommend_photos.each do |photo| %>
			        <%= image_tag photo.image.url, :size => '600x350' %>
			      <% end %>
			      <% end %>
			    <% end %>
			</div>

			<div class="post-edit-name">
			    <%= link_to @recommend.user.nickname,  post_path(@recommend.user), :style=>"color:#000000;" %> ’s Post
			</div>

			<div class="post-edit-date-label">Date / ﾄｳｺｳﾋﾞ</div>

			<div class="post-edit-date">
				<%= l(@recommend.created_at, format: :short) %>
			</div>

			<div class="post-edit-spot-label">Spot / ｵｽｽﾒｽﾎﾟｯﾄ</div>

		    <%= form_for(@recommend) do |f| %>
				<div class="post-edit-spot">
			      <%= f.text_field :spot, autofocus: true, placeholder: "オススメを入力してください", :size => "80*20", class: "form-control" %>
				</div>

				<div class="post-edit-title-label">Title / ﾀｲﾄﾙ</div>

				<div class="post-edit-title">
				  <%= f.text_field :title, autofocus: true, placeholder: "タイトルを入力してください", :size => "80*20", class: "form-control" %>
				</div>

				<div class="post-edit-body-label">Content / ﾅｲﾖｳ</div>

				<div class="post-edit-body">
				  <%= f.text_area :body, autofocus: true, placeholder: "本文を入力してください", :style=>"width:1040px; height:170px;", class: "form-control" %>
			    </div>
			    <div class="post-update-btn">
			      <%= f.submit "Update", class: "btn btn-outline-secondary btn-lg" %>
			    </div>
			<% end %>
	    </div>
	  </div>
</div>