<div class="container">
  <div class="row">
    <span class="top-title">Memories/メモリー</span>
    <br>
      <div class="row">
          <% @random_memories.each do |memory| %>
            <div class="col-xs-3">
              <div class="col-xs-9">
                <%= link_to user_path(memory) do %>
                  <% if memory.memory_photos.length == 0 %>
                        <% image_tag "/no_image.jpg", :size => '250x250' %>
                  <% else %>
                     <% memory.memory_photos.each do |photo| %>
                        <%= image_tag photo.image.url, :size => '250x250' %>
                     <% end %>
                  <% end %>
                <% end %>
                  <div class="text-size"><%= memory.created_at %></div>
                  <div class="top-current-user"><%= memory.user.nickname %>さん</div>
                  <div class="text-size">Spot: <%= memory.spot %></div>
                  <div class="text-size">Title: <%= memory.title %></div>
                  <div class="text-size-body"><%= memory.body %></div>
              </div>
            </div>
          <% end %>
      </div>
  </div>
  <br>
  <br>
  <br>
  <div class="row">
    <span class="top-title">Recommends/オススメ</span>
    <br>
      <div class="row">
          <% @random_recommends.each do |recommend| %>
            <div class="col-xs-3">
              <div class="col-xs-9">
                <%= link_to user_path(recommend) do %>
                  <% if recommend.recommend_photos.length == 0 %>
                        <% image_tag "/no_image.jpg", :size => '150x150' %>
                  <% else %>
                     <% recommend.recommend_photos.each do |photo| %>
                        <%= image_tag photo.image.url, :size => '150x150' %>
                     <% end %>
                  <% end %>
                <% end %>
                  <div class="text-size"><%= recommend.created_at %></div>
                  <div class="top-current-user"><%= recommend.user.nickname %>さん</div>
                  <div class="text-size">Recommend: <%= recommend.spot %></div>
                  <div class="text-size">Title: <%= recommend.title %></div>
                  <div class="text-size-body"><%= recommend.body %></div>
                  </div>
              </div>
          <% end %>
      </div>
  </div>
</div>


