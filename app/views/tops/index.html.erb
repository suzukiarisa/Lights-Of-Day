
  <h1>ロゴ挿入</h1>
    <div class="row">

      <div class="theTarget">
          <div class="pic1">
              <div class="box-left"></div><div class="box-right"></div>
          </div>
          <div class="pic2">
              <div class="box-left"></div><div class="box-right"></div>
          </div>
          <div class="pic3">
              <div class="box-left"></div><div class="box-right"></div>
          </div>
          <div class="pic4">
              <div class="box-left"></div><div class="box-right"></div>
          </div>
          <div class="pic5">
              <div class="box-left"></div><div class="box-right"></div>
          </div>
      </div>
    </div>
  <br><br><br>

<div class="container">
  <div class="row">
    <div class="top-memory">
      <span class="top-memory-title">Memories/メモリー</span>
    </div>
    <br>
      <div class="row">
        <div class="top-content">
          <% @random_memories.each do |memory| %>
            <div class="col-xs-3">
              <div class="col-xs-9">
                <%= link_to user_path(memory) do %>
                  <% if memory.memory_photos.length == 0 %>
                        <% image_tag "/no_image.jpg" %>
                  <% else %>
                     <% memory.memory_photos.each do |photo| %>
                        <%= image_tag photo.image.url %>
                     <% end %>
                  <% end %>
                <% end %>
                  <div class="text-size"><%= memory.post_date %></div>
                  <div class="memory-current-user"><%= memory.user.nickname %>さん</div>
                  <div class="text-size"><%= memory.spot %></div>
                  <div class="text-size"><%= memory.title %></div>
                  <div class="text-size"><%= memory.body %></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
  </div>
<br><br><br>

  <div class="row">
    <div class="top-recommend">
      <span class="top-recommend-title">Recommends/オススメ</span>
    </div>
    <br>
      <div class="row">
        <div class="top-content">
          <% @random_recommends.each do |recommend| %>
            <div class="col-xs-3">
              <div class="col-xs-9">
                <%= link_to user_path(recommend) do %>
                  <% if recommend.recommend_photos.length == 0 %>
                        <% image_tag "/no_image.jpg" %>
                  <% else %>
                     <% recommend.recommend_photos.each do |photo| %>
                        <%= image_tag photo.image.url %>
                     <% end %>
                  <% end %>
                <% end %>
                  <div class="text-size"><%= recommend.post_date %></div>
                  <div class="recommend-current-user"><%= recommend.user.nickname %>さん</div>
                  <div class="text-size"><%= recommend.spot %></div>
                  <div class="text-size"><%= recommend.title %></div>
                  <div class="text-size"><%= recommend.body %></div>
                  </div>
              </div>
          <% end %>
        </div>
      </div>
  </div>
</div>


