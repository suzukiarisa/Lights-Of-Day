

  <div class="signup-space-top"></div>

    <div class="container">
      <div class="row">
        <div class="col-xs-8 col-xs-offset-2">

    <%# autofocus="true"とは?Web画面上で自動的にフォーカスを入れるという設定,trueにすると生成されるinputタグにautofocus="autofocus"が追加される%>
         <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

              <div class="signin-form">

                  <div class="col-xs-6 col-xs-offset-3">
                      <%= f.label :ニックネーム, class: "float-left" %><br />
                      <%= f.text_field :nickname, autofocus: true, class:"col-auto form-control form-control-lg w-100" %>
                  </div>

                      <div class="col-xs-6 col-xs-offset-3">
                            <%= f.label :好きなアーティスト, class: "float-left" %><br />
                            <%= f.text_field :favorite_artists, autofocus: true, class:"col-auto form-control form-control-lg w-100" %>
                      </div>

                            <div class="col-xs-3 col-xs-offset-3">
                              <%= f.label :居住地, class: "float-left" %><br />
                              <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, include_blank: '選択して下さい' %>
                            </div>

                                <div class="col-xs-6 col-xs-offset-3">
                                  <%= f.label :メールアドレス %><br />
                                  <%= f.email_field :email, autocomplete: "email", class:"col-auto form-control form-control-lg w-100" %>
                                </div>

                                      <div class="col-xs-6 col-xs-offset-3">
                                        <%= f.label :パスワード %>
                                        <% if @minimum_password_length %>
                                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                                        <% end %><br />
                                        <%= f.password_field :password, autocomplete: "new-password", class:"col-auto form-control form-control-lg w-100" %>
                                      </div>

                                <div class="col-xs-6 col-xs-offset-3">
                                  <%= f.label :パスワード（確認） %><br />
                                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-auto form-control form-control-lg w-100" %>
                                </div>

                                <div class="signup-image-position">
                                  <div class="col-xs-6 col-xs-offset-1">
                                      <br>
                                      <%= f.file_field :image %>
                                  </div>
                                </div>

                         <div class="signup-button-space">
                            <div class="actions col-xs-6 col-xs-offset-3">
                               <br>
                               <%= f.submit "アカウントを作成", class:"btn btn-default btn-lg" %>
                            </div>
                         </div>
                </div>

                  <div class="link-to-signup">
                    <div class="col-xs-6 col-xs-offset-4">
                      <div class="signup-button-bottom-space">アカウントをお持ちの方は<%= link_to "こちら", new_user_session_path %></div>
                    </div>
                  </div>

        </div>
      </div>
    </div>

       <% end %>

